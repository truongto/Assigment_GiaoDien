<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_khoanthu"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/dongtien" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_khoanthu"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:textSize="26dp"

                   />

                <TextView
                    android:id="@+id/tvgia_khoanthu"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textColor="#FF3300"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvngay_khoanthu"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:textColor="#0033CC"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sua_khoanthu"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/sua" />

                <ImageView
                    android:id="@+id/xoa_khoanthu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/xoa" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>